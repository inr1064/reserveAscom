                    android:layout_height="match_parent"
                    android:textSize="10dp"/>
                <Button
                    android:id="@+id/day8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"/>
                <Button
                    android:id="@+id/day9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"/>
            </TableRow>
            <TableRow
                android:id="@+id/hour1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                >
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
